                    <StackLayout>
                            

                        <Label Text="BEM VINDO" FontSize="50"  FontAttributes="Bold" TextColor="#40E0D0" HorizontalOptions="Center" VerticalOptions="Center"/>

                        

                    </StackLayout>

                </Frame>

                <Label Text=""/>
                <Label Text=""/>
                <Label Text=""/>
                <Label Text=""/>
                <Label Text=""/>
                <Label Text=""/>
                <Label Text=""/>
                
            

                <Button x:Name="btn_logar" Text="ENTRAR" BackgroundColor="#40E0D0" TextColor="Black"
                        CornerRadius="20" HorizontalOptions="Center" Clicked="btn_logar_Clicked" />

            </StackLayout>

        </StackLayout>
    </Grid>

</ContentPage>